{
    "name": "TestModel",
    "n_gpu": 1,
    "arch": {
        "type": "MyModel",
        "args": {}
    },
    "data_loader": {
        "type": "MaskDataLoader",
        "args": {
            "type": "MyDataset",
            "args": {
                "data_dir": "input/data/train/images",
                "train": true,
                "transform": {
                    "type": "BasicTransform",
                    "args": {}
                }
            },
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy",
        "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": false
    }
}