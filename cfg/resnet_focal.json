{
    "name": "resnet_focal",
    "n_gpu": 1,

    "arch": {
        "type": "TimmModel",
        "args": {
            "model_name": "resnet50"
        }
    },
    "data_loader": {
        "type": "L1DataLoader_kind",
        "args":{
            "kind": "all",
            "data_dir": "/opt/ml/input/data/train/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "fc_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 50,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
