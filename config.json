{
    "name": "Vit_GH",
    "n_gpu": 1,
    "arch": {
        "type": "Vit_GH",
        "args": {}
    },
    "data_loader": {
        "type": "TrainLoader_vit",
        "args": {
            "data_dir": "/opt/ml/level1_imageclassification_cv-level1-cv-08/data_loader/data/train/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 3
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "ClibGh_loss",
    "metrics": [
        "accuracy",
        "macro_f1"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": false
    }
}